# ===== API 配置 =====
# MinerU API 配置
MINERU_API_BASE=https://mineru.net/api/v4
MINERU_API_TOKEN=your_mineru_api_token_here
MINERU_USER_TOKEN=your_user_token_here

# MinerU 处理选项
MINERU_ENABLE_OCR=true
MINERU_ENABLE_TABLE=true
MINERU_ENABLE_FORMULA=false
MINERU_LANGUAGE_CODE=ch
MINERU_ALLOWED_EXTS=pdf,doc,docx,ppt,pptx,png,jpg,jpeg

# MinerU 轮询控制
MINERU_POLL_MAX=20
MINERU_POLL_SLEEP=10
MINERU_LOG_LEVEL=high
MINERU_LOG_POLL_EVERY=5

# MinerU 锁配置
MINERU_LOCK_PATH=/tmp/mineru_js.lockdir
MINERU_LOCK_WAIT_MAX=120
MINERU_LOCK_POLL=2
MINERU_LOCK_STALE=1800

# MinerU 调试配置
MINERU_PUSH_DEBUG_TO_COMMENT=true
MINERU_MAX_DEBUG_BYTES=12000
MINERU_REVEAL_ON_ERROR=false


# ===== 通用配置 =====
# 默认语言设置
DEFAULT_LANGUAGE=ch

# 日志等级配置
DEFAULT_LOG_LEVEL=medium
